{
  "compilerOptions": {
    "target": "es6",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./", // Base directory for path resolution
    "paths": {
      "@/*": ["./src/*"] // Map '@/*' to './src/*'
    },
    "typeRoots": ["./node_modules/@types", "./src/types"]
  }
}
